    color: var(--muted);
    margin-bottom: var(--spacing-xl);
  }
  .vision-card {
    text-align: center;
    padding: var(--spacing-2xl);
    margin: var(--spacing-xl) 0;
  }
  .vision-icon {
    font-size: 64px;
    margin-bottom: var(--spacing-md);
  }
  .vision-card h2 {
    font-size: 32px;
    margin-bottom: var(--spacing-md);
  }
  .vision-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-xl);
    margin: var(--spacing-xl) 0;
  }
  .vision-item {
    padding: var(--spacing-xl);
  }
  .vision-item-icon {
    font-size: 40px;
    margin-bottom: var(--spacing-md);
  }
  .vision-item h3 {
    font-size: 20px;
    margin-bottom: var(--spacing-sm);
    color: var(--accent);
  }
  .vision-item p {
    color: var(--muted);
    line-height: 1.7;
  }
  .mission-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-lg);
    margin: var(--spacing-xl) 0;
  }
  .mission-item {
    text-align: center;
    padding: var(--spacing-xl);
    background: linear-gradient(135deg, rgba(93,214,255,.08) 0%, rgba(93,214,255,.03) 100%);
