<style>
  .hero-quote {
    font-size: clamp(20px, 3vw, 28px);
    font-weight: 600;
    color: var(--accent);
    margin: var(--spacing-lg) 0 var(--spacing-sm);
    font-style: italic;
  }
  .hero-quote-ja {
