  }
  .hero-quote-ja {
    font-size: clamp(16px, 2.5vw, 22px);
    color: var(--muted);
    margin-bottom: var(--spacing-xl);
  }
  .vision-card {
    text-align: center;
    padding: var(--spacing-2xl);
    margin: var(--spacing-xl) 0;
  }
  .vision-icon {
    font-size: 64px;
    margin-bottom: var(--spacing-md);
  }
  .vision-card h2 {
    font-size: 32px;
    margin-bottom: var(--spacing-md);
  }
  .vision-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-xl);
    margin: var(--spacing-xl) 0;
